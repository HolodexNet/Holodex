{
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,

    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "isolatedModules": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "allowJs": true,
//    "importsNotUsedAsValues": "error",
    "skipLibCheck": true,
    // TODO: work towards enabling this
    // "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "types": [
      "chrome",
      "vite-plugin-pwa/client"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
  ],
  "exclude": [
    "node_modules"
  ]
}
