{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "sourceMap": true,
    "allowJs": true, // because Holodex components are mostly in JS, so we'll allow JS loosely, despite the risks.
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "strict": true,
    "jsx": "preserve", // necessary for VOLAR to be happy about vue3 JSX.
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "types": [
      "vite/client",       // also added along with VOLAR support, but idk what this does.
      "@modyfi/vite-plugin-yaml/modules" // yaml support
    ] 
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"]
}
